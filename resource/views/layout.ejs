









<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href=”https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css”rel=”stylesheet”>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel= "stylesheet" href= "https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css" >
     
    <script src="https://unpkg.com/axios@1.1.2/dist/axios.min.js"></script>
    <link rel="stylesheet" href="/Css/app.css">
    <title>Real Time Pizza App</title>
   
</head>  
<body>
    

      
    <nav class=" nav container mx-auto flex items-center justify-between mt-4 p-4">
        <div>
            <a href="/">

                <img  src="/Img/logo.png" alt="logo">
            </a>
        </div>
        <div>
             <ul class="flex items-center " >
                
                <li class="ml-6  element rounded-full"><a href="/" id="name">Menu</a></li>
                <li class="ml-6 element rounded-full"><a href="#">Offers</a></li>
                
                <% if(session.user){ %>
                   


                   <li class="ml-6 element rounded-full"><a href="/status"><%='Orders'%></a></li>
                 
                
                 <%}%>

                    <li class="ml-6 element rounded-full">
                        <form action="/logout" method="post" id="submit">  
                            <a onclick="document.getElementById('submit').submit()" href="/<%=session.user? 'logout' : 'register'%>" ><%=session.user? 'Logout' :'Register'%></a>
                        </form>
                    </li>
               
                <li class="ml-6 element rounded-full"><a href="/<%=session.user? '' : 'login'%>"><%=session.user? session.user.name: 'Login'%></a></li>
                <li class="ml-6 "><a href="/cart" class="inline-block px-4 py-2 rounded-full flex items-center">
                    <span class="font-bold text-white text-lg mr-2" id="counter"><%=session.user && session.cart ? session.cart.quantity: ''%></span>
                    <img src="/Img/cart.png" alt="cart"></a>
                </li>
                
             </ul>
        </div> 
    </nav>


    <%- body %>


    <script src="/socket.io/socket.io.js"></script>
   <script type="module" src="/Js/app.js">

    


    
   </script> 
      <script src="https://kit.fontawesome.com/0c33d8899d.js" crossorigin="anonymous"></script>

</body>
</html>   






