
<section class="login pt-28 ">

    <div class=" bg-white  border w-vw md:w-4/5  lg:w-1/2 xl:w-1/3 p-12 mx-auto  ">
        <form action="/login" class="" method="post">
            <% if(messages.error){ %>
                <spam class="texter font-bold text-lg mb-4"><%=messages.error%></spam>
                <%}%>
          
            <div class="mt-2">

                <h2 class="mb-1 font-bold">Email</h2>
                <input name="email" value="<%=messages.email%>" type="email" class="border border-gray-300 p-2 w-full mb-1 font-bold" placeholder="Email">
            </div>
            <div class="mt-2">
                <h2 class="mb-1 font-bold">Password</h2>
                <input name="password"  type="password" class="border border-gray-300 p-2  w-full mb-1 font-bold" placeholder="****************">
            </div>

            <div class="flex items-center w-full  mt-6 mb-2 ">
                <button  class="btn-primary px-6 py-2 ml-4 rounded-full text-white font-bold">Login</button>
                 <!-- <spam class="text-xs text-red font-bold ml-4 amount ">Already have account?</spam> -->
                 <a href="/login" class="text-xs text-red font-bold ml-4 amount">Already have account</a>
            </div>
        </form>
    </div>
    

</section>
